<%= simple_form_for(restaurant) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, placeholder: 'Restaurant name' %>
    <%= f.input :address, placeholder: 'Restaurant address' %>
    <%= f.input :phone_number, placeholder: 'Restaurant phone number' %>
    <%= f.input :category, collection: ['Chinese', 'Italian', 'Japanese', 'French', 'Belgian'], default: 'Chinese'%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>

<% end %>
